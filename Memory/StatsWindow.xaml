<Window x:Class="Memory.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Memory"
        Title="Highscore" Height="300" Width="300" Activated="Window_Activated" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <local:TimeConverter x:Key="timeConverter" />
    </Window.Resources>

    <Grid>
        <DataGrid x:Name="FivesGrid" Margin="0,0,0,0" AutoGenerateColumns="False" CanUserReorderColumns="False" CanUserSortColumns="False" SelectionMode="Single" IsReadOnly="True" AlternatingRowBackground="#FFE7FFE4" HorizontalGridLinesBrush="#FFB8ECC6" VerticalGridLinesBrush="#FFD6FFDA">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Score" Binding="{Binding clicks}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding time, Converter={StaticResource timeConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
