<Window x:Class="Memory.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Memory"
        Title="StatsWindow" Height="300" Width="300" Activated="Window_Activated">
    <Window.Resources>
        <local:TimeConverter x:Key="timeConverter" />
    </Window.Resources>
    
    <Grid>
        <DataGrid x:Name="FivesGrid" Height="180" Margin="64,41,0,0" VerticalAlignment="Top" Width="156" AutoGenerateColumns="False" Focusable="False" CanUserReorderColumns="False" CanUserSortColumns="False" SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="Score" Binding="{Binding clicks}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding time, Converter={StaticResource timeConverter}}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Height="92" Margin="13,74,0,0" VerticalAlignment="Top" Width="58" Click="Button_Click"/>

    </Grid>
</Window>
